<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorwhite"
    android:paddingBottom="10dp"
    android:layout_marginBottom="5dp">

    <TextView
        android:id="@+id/tv_PS_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="PS_Name"
        android:padding="2dp"
        android:layout_marginStart="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_PS_Item_Code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:hint="Item Code"
        android:padding="2dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_PS_Name"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        android:id="@+id/view0"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_PS_Name"
        />


    <TextView
        android:id="@+id/tv_layout_product_Item_heading0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:text="@string/unit_price_rate"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view0" />

    <TextView
        android:id="@+id/tied_layout_productItem_Product_rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/tv_layout_product_Item_heading0"
        android:inputType="number"
        android:textAlignment="viewEnd"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_layout_product_Item_heading0"
        app:layout_constraintTop_toBottomOf="@id/view0" />


    <TextView
        android:id="@+id/tv_layout_product_currentcost_heading1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:text="Current Cost"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tied_layout_productItem_Product_rate" />

    <TextView
        android:id="@+id/tied_layout_productItem_currentcost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:inputType="number"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:textAlignment="viewEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_layout_product_currentcost_heading1"
        app:layout_constraintTop_toBottomOf="@id/tied_layout_productItem_Product_rate" />

    <TextView
        android:id="@+id/tv_layout_product_discountedPrice_heading2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:text="Discointed Price"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tied_layout_productItem_currentcost" />

    <TextView
        android:id="@+id/tied_layout_productItem_discountedPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:inputType="number"
        android:textAlignment="viewEnd"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_layout_product_discountedPrice_heading2"
        app:layout_constraintTop_toBottomOf="@id/tied_layout_productItem_currentcost" />


    <TextView
        android:id="@+id/tv_PS_Desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="PS_Desc"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:layout_marginStart="12dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_layout_product_discountedPrice_heading2" />


    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#C7C7C7"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_PS_Desc" />
</androidx.constraintlayout.widget.ConstraintLayout>